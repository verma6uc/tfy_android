<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".home.activity.HomeActivity"

    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <RelativeLayout
        android:id="@+id/rl_appicon_con"
        android:layout_above="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/logosize"
            android:layout_height="@dimen/logosize"
            android:background="@mipmap/talentify_logo_red"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/tv_talentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_app_icon"
            android:gravity="center_horizontal"
            android:textColor="@color/home_app_name"
            android:textSize="@dimen/h6"
            android:lineSpacingExtra="48sp"
            android:text="Talentify"
            android:textAllCaps="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_btn_shape"
        android:textAllCaps="true"
        android:text="Log In"
        android:textSize="@dimen/p1"
        android:textColor="@color/white"
        android:layout_above="@+id/btn_get_started"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textColor="#9b9b9b"
        android:textSize="@dimen/p2"
        android:text="Sign Up"
        android:background="@color/white"/>
</RelativeLayout>